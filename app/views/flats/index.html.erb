<h1>Simple Airbnb</h1>

<div class="container">
    <% @flats.each do |flat| %>
      <div class="card">
        <h2><%= flat.name %></h2>
        <p><%= flat.address %> </p>
        <p><%= flat.description %> </p>
        <p><%= flat.price_per_night %> <%= flat.number_of_guests %></p>
      </div>   
    <% end %>  
</div>

